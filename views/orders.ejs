<%- include('partials/header.ejs') %>

<div class="page-container">
    <div class="header-flex">
        <h1><i class="fas fa-receipt"></i> Order Management</h1>
        <p>Total Orders Processed: <%= data.length %></p>
    </div>

    <% if (data.length === 0) { %>
        <div class="empty-msg">No orders found in the system.</div>
    <% } else { %>
        <table class="data-table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Order Date</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(order => { %>
                    <tr>
                        <td><small><%= order._id %></small></td>
                        <td>
                            <strong><%= order.customerInfo.name %></strong><br>
                            <span class="sub-text"><%= order.customerInfo.email %></span>
                        </td>
                        <td><%= order.totalPrice.toFixed(2) %> birr </td>
                        <td>
                            <form action="/orders/<%= order._id %>/status?_method=PUT" method="POST">
                                <select name="status" onchange="this.form.submit()" class="status-select">
                                    <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                    <option value="completed" <%= order.status === 'completed' ? 'selected' : '' %>>Completed</option>
                                    <option value="cancelled" <%= order.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                                </select>
                            </form>
                        </td>
                        <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
</div>

<%- include('partials/footer') %>